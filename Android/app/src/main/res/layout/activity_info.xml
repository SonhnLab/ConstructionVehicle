<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sonhnlab.pc.constructionvehicle.activities.InfoActivity">

    <RelativeLayout
        android:id="@+id/layout_car_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_app_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Construction Vehicle"
            android:textColor="@android:color/white"
            android:textSize="24sp"/>

        <ImageView
            android:id="@+id/iv_car_info"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:layout_below="@+id/tv_app_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_car"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_car_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Ver 1.0.0"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="italic"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_car_info"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_instructor_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Instructor:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="italic"/>


        <ImageView
            android:id="@+id/iv_sioux_info"
            android:layout_width="160dp"
            android:layout_height="136dp"
            android:layout_below="@+id/tv_instructor_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-16dp"
            android:src="@drawable/logo_sioux"/>

        <TextView
            android:id="@+id/tv_sioux_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_sioux_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-16dp"
            android:text="Sioux Embedded Systems Ltd. Vietnam"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_student_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sioux_info"
            android:layout_marginTop="18dp"
            android:text="Students perform:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="italic"/>

        <LinearLayout
            android:id="@+id/layout_student_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_student_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hồ Ngọc Sơn"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vĩnh Quốc Thịnh"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đoàn Ngọc Phước"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phan Dương Ngọc"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
