<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="16dip"
    tools:context=".activities.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_up"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_up"/>

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_below="@+id/iv_up"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/iv_up"
            android:src="@drawable/ic_right"/>

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_below="@+id/iv_up"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/iv_up"
            android:src="@drawable/ic_left"/>

        <ImageView
            android:id="@+id/iv_down"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_left"
            android:src="@drawable/ic_down"/>

        <ImageView
            android:id="@+id/iv_lift_up"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_down"
            android:layout_toRightOf="@+id/iv_down"
            android:src="@drawable/ic_lift_up"/>

        <ImageView
            android:id="@+id/iv_lift_down"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_down"
            android:layout_toLeftOf="@+id/iv_down"
            android:src="@drawable/ic_lift_down"/>

    </RelativeLayout>


</RelativeLayout>
